<!------ Include the above in your HEAD tag ---------->
<% total = 0 %>
<div class="enable-bootstrap">
 
    <div class="container">
        <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:15%">Produit</th>
                <th style="width:65%">Description</th>
                <th style="width:10%">Prix</th>
                <th style="width:10%">Action</th>
            </tr>
        </thead>
            <% @item.each do |item| %>
        <tbody>
            <tr>
                <td style="width:20%">
                    <div class="row">
                        <div ><%= image_tag(item.cat_image, class:"img-responsive") %>
                    </div>
                </td>
                <td style="width:70%">
                        <div >
                            <h4 class="nomargin"><%= item.title %> </h4>
                            <p><%= item.description %></p>
                        </div>
                    </div>
                </td>
                <td style="width:5%"><%= item.price %> â‚¬</td>
                <td class="actions" data-th="">
                    <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                    <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>                                
                </td>
            </tr>
        </tbody>
        <tfoot>
           
            <% end %>
          
            <tr>
                <td>
                <%= link_to "Continue Shopping", root_path, class:"btn btn-warning" %>
               
                <td><%= link_to "Valider le panier", new_order_path, class:"btn btn-success btn-block" %></td>
            </tr>
        </tfoot>
    </table>
</div>
</div>