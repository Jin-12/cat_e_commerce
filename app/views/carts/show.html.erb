<!------ Include the above in your HEAD tag ---------->
<% total = 0 %>
<div class="enable-bootstrap">
 
    <div class="container">
        <table id="cart" class="table table-hover table-condensed">

        <thead>
            <tr>
                <th style="width:15%">Produit</th>
                <th style="width:65%">Description</th>
                <th style="width:20%">Prix</th>
               
            </tr>
        </thead>
            <% @item.each do |item| %>
        <tbody>
            <tr>
                <td style="width:15%">
                    <div class="row">
                        <div ><%= image_tag(item.cat_image, class:"img-responsive") %>
                    </div>
                </td>
                <td style="width:65%">
                        <div >
                            <h4 class="nomargin"><%= item.title %> </h4>
                            <p><%= item.description %></p>
                        </div>
                    </div>
                </td>
                <td style="width:20%" id="price"><%= item.price %> â‚¬</td>
                <% end %>
            </tr>
        </tbody>
        </table>
       

           <div class="cart-buttons">       
                <%= link_to "Ajouter des photos", root_path, class:"btn btn-warning" %>
                <% if !current_user.cart.items.empty? %>
               <%= link_to "Valider le panier", new_order_path, class:"btn btn-success" %>
               <% end %>
            </div>
  
</div>
</div>